<h1> <%= project.title %></h1>

<form action="/projects/<%= project._id %>/update" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Project Title</label>
    <input type="text" id="title" name="title" value="<%= project.title %>" required>
  </div>

  <div class="form-group">
    <label for="summary">Project Summary</label>
    <textarea id="summary" name="summary" required><%= project.summary %></textarea>
  </div>

  <div class="form-group">
    <label for="description">Project Description</label>
    <textarea id="description" name="description" required><%= project.description %></textarea>
  </div>

  <div class="form-group">
    <label for="tech">Technologies Used</label>
    <input type="text" id="tech" name="tech" value="<%= project.tech.join(', ') %>" required>
  </div>

  <div class="form-group">
    <label for="screenshot">Change Screenshot</label>
    <input type="file" id="screenshot" name="screenshot" accept="image/*">
    <p>Current Screenshot:</p>
    <img src="<%= project.screenshot %>" alt="Current Screenshot" class="current-screenshot">
  </div>

  <button type="submit">Update Project</button>
</form>

<form action="/projects/<%= project._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this project?');">
  <button type="submit" class="btn btn-delete">Delete Project</button>
</form>

<a href="/projects" class="back-link">Back to All Projects</a>

<h1><%= project.title %></h1>
<img src="<%= project.screenshot %>" alt="<%= project.title %>" class="project-image-large">

<div class="project-details">
  <h2>Description</h2>
  <p><%= project.description %></p>
  <h2>Technologies Used</h2>
  <ul>
    <% project.tech.forEach(function(tech) { %>
      <li><%= tech %></li>
    <% }); %>
  </ul>
</div>

<div class="project-actions">
  <a href="/projects/<%= project._id %>/edit" class="btn btn-edit">Edit Project</a>
  
  <form action="/projects/<%= project._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this project?');">
    <button type="submit" class="btn btn-delete">Delete Project</button>
  </form>
</div>
<a href="/projects" class="back-link">Back to All Projects</a>
